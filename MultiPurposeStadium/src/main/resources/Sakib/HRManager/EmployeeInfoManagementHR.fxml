<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Sakib.HRManager.EmployeeInfoManagementHRController">

    <children>

        <Text layoutX="210.0" layoutY="35.0" text="Employee Information Management">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Text>

        <TableView fx:id="employeeTable"
                   layoutX="20.0" layoutY="60.0"
                   prefHeight="300.0" prefWidth="320.0">
            <columns>
                <TableColumn fx:id="idCol"    prefWidth="80.0" text="ID" />
                <TableColumn fx:id="nameCol"  prefWidth="140.0" text="Name" />
                <TableColumn fx:id="deptCol"  prefWidth="100.0" text="Department" />
            </columns>
        </TableView>


        <Text layoutX="360.0" layoutY="65.0" text="Personal Information" />
        <Text layoutX="360.0" layoutY="95.0" text="Employee ID:" />
        <TextField fx:id="idTF" layoutX="460.0" layoutY="80.0" prefWidth="240.0" />

        <Text layoutX="360.0" layoutY="130.0" text="Name:" />
        <TextField fx:id="nameTF" layoutX="460.0" layoutY="115.0" prefWidth="240.0" />

        <Text layoutX="360.0" layoutY="165.0" text="Address:" />
        <TextArea fx:id="addressTA"
                  layoutX="460.0" layoutY="150.0"
                  prefWidth="240.0" prefHeight="60.0"
                  wrapText="true" />

        <Text layoutX="360.0" layoutY="235.0" text="Contact Details" />
        <Text layoutX="360.0" layoutY="265.0" text="Phone:" />
        <TextField fx:id="phoneTF" layoutX="460.0" layoutY="250.0" prefWidth="240.0" />

        <Text layoutX="360.0" layoutY="300.0" text="Email:" />
        <TextField fx:id="emailTF" layoutX="460.0" layoutY="285.0" prefWidth="240.0" />

        <Text layoutX="360.0" layoutY="330.0" text="Department:" />
        <TextField fx:id="departmentTF" layoutX="460.0" layoutY="315.0" prefWidth="240.0" />

        <Text layoutX="360.0" layoutY="360.0" text="Job Title:" />
        <TextField fx:id="jobTitleTF" layoutX="460.0" layoutY="345.0" prefWidth="240.0" />

        <Text layoutX="360.0" layoutY="390.0" text="Salary:" />
        <TextField fx:id="salaryTF" layoutX="460.0" layoutY="375.0" prefWidth="240.0" />

        <Button fx:id="saveButton"
                layoutX="20.0" layoutY="380.0"
                prefWidth="120.0" prefHeight="30.0"
                text="Save Changes"
                onAction="#saveButton" />

        <Button fx:id="backButton"
                layoutX="160.0" layoutY="380.0"
                prefWidth="120.0" prefHeight="30.0"
                text="Back"
                onAction="#backButton" />

        <Label fx:id="alertLabelEmp"
               layoutX="300.0" layoutY="415.0"
               prefWidth="400.0" prefHeight="25.0" />

    </children>
</AnchorPane>
