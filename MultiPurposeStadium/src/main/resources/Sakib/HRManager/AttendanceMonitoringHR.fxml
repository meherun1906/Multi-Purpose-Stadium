<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Sakib.HRManager.AttendanceMonitoringHRController">

    <children>

        <Text layoutX="190.0" layoutY="35.0" text="Attendance Management Interface">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Text>

        <Text layoutX="20.0" layoutY="75.0" text="Department:" />
        <ComboBox fx:id="departmentCB"
                  layoutX="100.0" layoutY="60.0"
                  prefWidth="150.0"
                  promptText="Select department" />

        <Text layoutX="270.0" layoutY="75.0" text="Employee Name:" />
        <TextField fx:id="employeeNameTF"
                   layoutX="380.0" layoutY="60.0"
                   prefWidth="150.0" />

        <Text layoutX="20.0" layoutY="115.0" text="From:" />
        <DatePicker fx:id="fromDateDP"
                    layoutX="60.0" layoutY="100.0"
                    prefWidth="130.0" />
        <Text layoutX="210.0" layoutY="115.0" text="To:" />
        <DatePicker fx:id="toDateDP"
                    layoutX="240.0" layoutY="100.0"
                    prefWidth="130.0" />

        <Button fx:id="searchButton"
                layoutX="400.0" layoutY="100.0"
                prefWidth="100.0" prefHeight="28.0"
                text="Search"
                onAction="#searchButton" />

        <Button fx:id="backButtonAtt"
                layoutX="520.0" layoutY="100.0"
                prefWidth="80.0"
                text="Back"
                onAction="#backButtonAtt" />

        <TableView fx:id="attendanceTable"
                   layoutX="20.0" layoutY="150.0"
                   prefHeight="250.0" prefWidth="710.0">
            <columns>
                <TableColumn fx:id="dateCol"       prefWidth="90.0"  text="Date" />
                <TableColumn fx:id="empNameCol"    prefWidth="140.0" text="Employee" />
                <TableColumn fx:id="deptCol"       prefWidth="100.0" text="Department" />
                <TableColumn fx:id="checkInCol"    prefWidth="90.0"  text="Check-In" />
                <TableColumn fx:id="checkOutCol"   prefWidth="90.0"  text="Check-Out" />
                <TableColumn fx:id="totalHoursCol" prefWidth="90.0"  text="Total Hours" />
                <TableColumn fx:id="absenceCol"    prefWidth="110.0" text="Absence Details" />
            </columns>
        </TableView>

        <Label fx:id="alertLabelAtt"
               layoutX="20.0" layoutY="415.0"
               prefWidth="700.0" prefHeight="25.0" />

    </children>
</AnchorPane>
