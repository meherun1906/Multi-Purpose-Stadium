<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop.demots.TrainingDevelopmentHRController">

    <children>

        <Text layoutX="190.0" layoutY="35.0" text="Training &amp; Development - Workshops">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Text>

        <Text layoutX="20.0" layoutY="54.0" text="Upcoming Workshops:" />
        <TableView fx:id="workshopTable" layoutX="20.0" layoutY="69.0" prefHeight="200.0" prefWidth="710.0">
            <columns>
                <TableColumn fx:id="titleCol" prefWidth="180.0" text="Title" />
                <TableColumn fx:id="trainerCol" prefWidth="140.0" text="Trainer" />
                <TableColumn fx:id="dateCol" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="durationCol" prefWidth="100.0" text="Duration" />
                <TableColumn fx:id="deptCol" prefWidth="150.0" text="Department" />
            </columns>
        </TableView>

        <Button fx:id="createWorkshopButton" layoutX="20.0" layoutY="280.0" onAction="#createWorkshopButton" prefHeight="30.0" prefWidth="160.0" text="Create New Workshop" />


        <Text layoutX="20.0" layoutY="335.0" text="Title:" />
        <TextField fx:id="titleTF" layoutX="90.0" layoutY="320.0" prefWidth="200.0" />

        <Text layoutX="320.0" layoutY="335.0" text="Trainer:" />
        <TextField fx:id="trainerTF" layoutX="390.0" layoutY="320.0" prefWidth="200.0" />

        <Text layoutX="20.0" layoutY="370.0" text="Date:" />
        <DatePicker fx:id="dateDP" layoutX="90.0" layoutY="355.0" prefWidth="200.0" />

        <Text layoutX="320.0" layoutY="370.0" text="Duration:" />
        <TextField fx:id="durationTF" layoutX="390.0" layoutY="355.0" prefWidth="200.0" />

        <Text layoutX="20.0" layoutY="405.0" text="Department:" />
        <TextField fx:id="departmentTF" layoutX="90.0" layoutY="390.0" prefWidth="200.0" />


        <Button fx:id="saveWorkshopButton" layoutX="418.0" layoutY="389.0" onAction="#saveWorkshopButton" prefHeight="30.0" prefWidth="120.0" text="Save Workshop" />

        <Button fx:id="backButtonTraining" layoutX="640.0" layoutY="405.0" onAction="#backButtonTraining" prefHeight="30.0" prefWidth="80.0" text="Back" />

        <Label fx:id="alertLabelTraining" layoutX="20.0" layoutY="425.0" prefHeight="20.0" prefWidth="700.0" />

    </children>
</AnchorPane>
